<launch>
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]" />
    <arg name="x_pos" default="-3.0" />
    <arg name="y_pos" default="1.0" />
    <arg name="z_pos" default="0.0" />
    <arg name="sensor_update_rate" default="10" />
    <arg name="encoder_noise_factor" default="0.0001" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro update_rate:=$(arg sensor_update_rate) encoder_noise_factor:=$(arg encoder_noise_factor)" />

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
</launch>