<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]" />
  <arg name="x_pos" default="-3.0" />
  <arg name="y_pos" default="1.0" />
  <arg name="z_pos" default="0.0" />
  <arg name="sensor_update_rate" default="5" />
  <arg name="encoder_noise_factor" default="0.0005" />
  <arg name="odometry_source" default="encoder" />
  <arg name="lidar_std" default="0.02" />


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_house.world" />
    <arg name="paused" value="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" value="true" />
    <arg name="headless" value="false" />
    <arg name="debug" value="false" />
  </include>

  <param name="robot_description"
    command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro update_rate:=$(arg sensor_update_rate) encoder_noise_factor:=$(arg encoder_noise_factor) lidar_std:=$(arg lidar_std) odometry_source:=$(arg odometry_source)" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
    args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
</launch>